@model Kitap

<form method="post" enctype="multipart/form-data">
    <input asp-for="ResimUrl" hidden/>
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3">
                    <h2 class="text-primary">@(Model == null ? "Kitap Ekle" : "Kitap Güncelle")</h2> <!--Modelid 0'a eşit ise Ekleme işlemi yapacak-->
                </div>

                <div class="mb-3">
                    <label asp-for="KitapAdi" class="control-label"></label>
                    <input asp-for="KitapAdi" class="form-control" />
                    <span asp-validation-for="KitapAdi" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="KitapTuruID" class="p-0"></label>
                    <select asp-for="KitapTuruID" asp-items="ViewBag.KitapTuruList" class="form-select"></select>
                    <span asp-validation-for="KitapTuruID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tanim" class="control-label"></label>
                    <input asp-for="Tanim" class="form-control" />
                    <span asp-validation-for="Tanim" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Yazar" class="control-label"></label>
                    <input asp-for="Yazar" class="form-control" />
                    <span asp-validation-for="Yazar" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Fiyat" class="control-label"></label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ResimUrl" class="control-label"></label>
                    <input type="file" name="file" class="form-control" />
                </div>

                @if (Model != null)
                {
                    <input type="submit" class="btn btn-lg btn-primary" style="width:250px" value="Güncelle" />
                }
                else
                {
                    <input type="submit" class="btn btn-lg btn-primary" style="width:250px" value="Ekle" />
                }

                <a asp-controller="Kitap" asp-action="Index" class="btn btn-lg btn-primary" style="width=250px">
                    Kitaplar Sayfasına Geri Dön
                </a>
            </div>
        </div>
        <div class="col-2">
            @if (Model != null)
            {
                <br /> <br />
                <img src="@Model.ResimUrl" width="100%" style="border-radius:7px; border:1px solid #bbb9b9 " />
            }
        </div>
    </div>



</form>

